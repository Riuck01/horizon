---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";

// Sections existantes ou à créer
import Hero from "@components/Hero/Hero.astro"; // Accueil
import PortfolioThreeCards from "@components/Portfolio/PortfolioThreeCards.astro"; // Matériel
import About from "@components/About/About.astro"; // Votre animateur
import PricingThreeCards from "@components/Pricing/PricingThreeCards.astro"; // Tarifs
import Contact from "@components/Contact/Contact.astro"; // Contacts

import siteData from "@config/siteData.json";
---

<BaseLayout 
  title={siteData.title} 
  description={siteData.description} 
  navStartStyle="white"
>
  <!-- Accueil -->
  <Hero />


  <!-- Matériel -->
  <PortfolioThreeCards />

  <!-- Votre animateur -->
  <About />

  <!-- Tarifs -->
  <PricingThreeCards />

  <!-- Contacts -->
  <Contact />
</BaseLayout>
