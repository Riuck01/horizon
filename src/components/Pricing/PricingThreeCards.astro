---
/**
 * * Pricing cards with three cards
 */

import Button from "@components/Button/Button.astro";
import { Image } from "astro:assets";

interface pricingItem {
	name: string; // plan name
	featured?: boolean; // if true, will be highlighted or otherwise featured
	price: number;
	features: string[]; // list of features
	image: ImageMetadata; // imported image
}

import image3 from "@assets/images/couple-1-square.jpg";
import image1 from "@assets/images/couple-5-min.jpg";
import image2 from "@assets/images/couple-6-crop.jpg";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
	{
		name: "FORFAIT MARIAGE",
		featured: false,
		price: 1500,
		features: [
			"DJ Sono et Lumière avec animations",
			"Micro sans fil pour les discours",
			"Vidéo Projecteur",
			"Enceinte pour vin d’honneur avec playlist et micro hf pour animations",
		],
		image: image1,
	},
	{
		name: "FORFAIT MARIAGE + Cérémonie laïque",
		featured: true,
		price: 1800,
		features: [
			"Même configuration que le forfait mariage",
			"2 enceintes avec table de mixage ",
			"gestion musique par ordinateur",
		],
		image: image2,
	},
	{
		name: "Autre",
		featured: false,
		price: "X",
		features: [
			"Anniversaires",
			"Soirées privées",
			"Soirées d'entreprise et plus encore",
			"",
			"",
						"",
			"",
						"",
			"",
			"Devis selon la soirée"
		],
		image: image3,
	},
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">Mes Tarifs</h2>
		<h3 class="h3 text-pretty uppercase">Aucune limite d’horaire : je vous accompagne jusqu’au dernier morceau, sans supplément.</h3>
	</div>

	<!-- works for 3 pricing plans, adjust grid cols here to support more or less -->
<div
	class="mx-auto grid w-full max-w-md gap-12 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3"
>
	{
		pricingData.map((plan, index) => (
			<a
				href={`/tarif-${index + 1}`}
				class="flex w-full flex-col rounded-xl overflow-hidden transform transition duration-300 hover:scale-[1.03] hover:shadow-xl"
			>
				<div>
					<div class="aspect-[3/4] h-auto w-full overflow-hidden">
						<Image
							src={plan.image}
							alt={plan.name}
							width={450}
							densities={[1.5, 2]}
							class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
						/>
					</div>
				</div>

				<div
					class:list={[
						"flex h-full flex-col justify-between border-2 border-t-0 pt-10 pb-10",
						{
							"bg-primary-200 border-primary-200": plan.featured === true,
							"border-primary-200": plan.featured !== true,
						},
					]}
				>
					<div>
						<h3 class="h2 text-center">{plan.name}</h3>

						<ul class="mt-4 flex flex-col gap-3 px-8">
							{plan.features.map((feature) => (
								<li class="leading-snug lg:text-lg lg:leading-snug">{feature}</li>
							))}
						</ul>
					</div>

					<p class="font-decorative text-base-800 mt-6 flex justify-center text-center text-[5rem] leading-none">
						{plan.price}€
					</p>
				</div>
			</a>
		))
	}
</div>

</section>
